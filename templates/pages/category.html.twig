{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	-
	{{ category.name }}
{% endblock %}

{% block body %}
<div class="container mx-auto my-16 p-4">
	{% set image = category.image|first %}
	<div style="background-image: url({{ image.picture }});" class="bg-cover bg-center bg-no-repeat h-80"></div>
	<div class="container mx-auto">
		<div class="flex flex-wrap justify-center my-32">
			<h1 class="text-4xl font-bold text-primary mb-8">{{ category.name }}</h1>
			<p class="text-2xl text-gray-800">{{ category.description|raw }}</p>
		</div>
		<div class="flex flex-wrap justify-center">
			{% for product in category.image %}
				<div class="w-4/5 md:w-1/3 p-4">
					<div class="bg-white shadow-lg rounded-lg overflow-hidden">
						<div class="bg-cover bg-center h-64" style="background-image: url({{ product.picture }});"></div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
{% endblock %}
