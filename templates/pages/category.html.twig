{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	-
	{{ category.name }}
{% endblock %}

{% block body %}
<div class="container mx-auto my-16 p-4">
	<div>
		<img src="{{ category.image|first ? asset('uploads/category/' ~ category.image|first.picture) : 'https://via.placeholder.com/1920x1080' }}" alt="{{ category.name }}" class="w-full h-96 object-cover object-center">
	</div>
	<div class="container mx-auto">
		<div class="flex flex-wrap justify-center my-32">
			<h1 class="text-4xl font-bold text-primary mb-8">{{ category.name }}</h1>
			<p class="text-2xl text-gray-800">{{ category.description|raw }}</p>
		</div>
		<div class="flex flex-wrap justify-center">
			{% for image in category.image %}
				<div class="w-4/5 md:w-1/3 p-4">
					<div class="bg-white shadow-lg rounded-lg overflow-hidden">
						<div class="bg-cover bg-center h-64">
							<img src="{{ image.picture ? asset('uploads/category/' ~ image.picture) : 'https://via.placeholder.com/500x500' }}" alt="{{ category.name }}" class="w-full h-64 object-cover object-center">
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
{% endblock %}
