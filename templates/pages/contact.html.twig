			</div>
			<div class="relative z-0 w-full mb-6 group">
				{{ form_widget(form.message, {'attr': {'class': 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-primary peer', 'placeholder': ' ', 'required': 'required'}}) }}
