<div>
	<h6 class="mb-4 flex justify-center font-semibold uppercase md:justify-start text-primary">
		Plan d'accès
	</h6>
	<div id="map" class="w-full h-64"></div>
</div>
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
<script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
<script type="text/javascript">
	let latitude = 0;
	let longitude = 0;
	let address = "5 avenue de gemozac" + " " + "17100" + " " + "Saintes";
	let url = 'https://nominatim.openstreetmap.org/search?q=' + address + '&format=json';
	$.ajax({
		url: url,
		async: false,
		dataType: 'json',
		success: function(data) {
			latitude = data[0].lat;
			longitude = data[0].lon;
		}
	});
	let map = L.map('map').setView([latitude, longitude], 15);
	L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
		attribution: 'Données © OpenStreetMap/ODbL - rendu OSM France',
		minZoom: 1,
		maxZoom: 20,
	}).addTo(map);
	let marker = L.marker([latitude, longitude]).addTo(map);
</script>