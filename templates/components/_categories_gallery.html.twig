<div id="service" class="container mx-auto py-2 px-5 lg:px-16 lg:pt-24">
	<h3 class="text-3xl font-bold text-start text-primary mb-8">Nos prestations</h3>
	<p class="text-lg text-start text-black mb-8">
		Voici les différents services que nous proposons à nos clients.
	</p>
	{% set first_favorite = categories|filter(c => c.isFavorite == true)|first %}
	{% set last_favorite = categories|filter(c => c.isFavorite == true)|last %}
	<div class="flex flex-wrap cursor-pointer">
		<div class="flex flex-wrap w-full md:w-1/2">
			<div class="w-full md:h-[480px] h-[240px] p-1 md:p-2 relative group">
				<img alt="{{ first_favorite.name }}" class="block h-full w-full rounded-sm object-cover object-center" src="{{ first_favorite.image|first ? asset('uploads/category/' ~ first_favorite.image|first.picture) : 'https://via.placeholder.com/500x500' }}"/>
				<div class="absolute inset-0 flex flex-col items-center justify-center opacity-0 hover:opacity-100 transition text-white p-8 rounded-sm bg-opacity-50 bg-red-600">
					<h3 class="text-2xl font-bold text-center text-white mb-4">{{ first_favorite.name }}</h3>
					<p class="text-lg text-center text-white mb-4">{{ first_favorite.summary }}</p>
					<a href="{{ path('category', { slug: first_favorite.slug }) }}" class="bg-white px-8 py-2 font-bold text-center text-primary hover:bg-primary hover:text-white rounded-md">Voir plus</a>
				</div>
			</div>
			{% for category in categories|filter(c => c.isFavorite == false)|slice(0, 3) %}
				<div class="w-full sm:w-1/2 md:w-1/3 p-1 md:p-2 md:h-[240px] h-[240px] relative group">
					<img alt="{{ category.name }}" class="block h-full w-full rounded-sm object-cover object-center" src="{{ category.image|first ? asset('uploads/category/' ~ category.image|first.picture) : 'https://via.placeholder.com/500x500' }}"/>
					<div class="absolute inset-0 flex flex-col items-center justify-center opacity-0 hover:opacity-100 transition text-white p-8 rounded-sm bg-opacity-50 bg-red-600">
						<h4 class="text-2xl font-bold text-center text-white mb-4">{{ category.name }}</h4>
						<p class="text-lg md:text-sm text-center text-white mb-4">{{ category.summary }}</p>
						<a href="{{ path('category', { slug: category.slug }) }}" class="bg-white px-8 py-2 font-bold text-center text-primary hover:bg-primary hover:text-white rounded-md">Voir plus</a>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="flex flex-wrap w-full md:w-1/2">
			{% for category in categories|filter(c => c.isFavorite == false)|slice(3, 6) %}
				<div class="w-full sm:w-1/2 md:w-1/3 p-1 md:p-2 md:h-[240px] h-[240px] relative group">
					<img alt="{{ category.name }}" class="block h-full w-full rounded-sm object-cover object-center" src="{{ category.image|first ? asset('uploads/category/' ~ category.image|first.picture) : 'https://via.placeholder.com/500x500' }}"/>
					<div class="absolute inset-0 flex flex-col items-center justify-center opacity-0 hover:opacity-100 transition text-white p-8 rounded-sm bg-opacity-50 bg-red-600">
						<h4 class="text-2xl font-bold text-center text-white mb-4">{{ category.name }}</h4>
						<p class="text-lg md:text-sm text-center text-white mb-4">{{ category.summary }}</p>
						<a href="{{ path('category', { slug: category.slug }) }}" class="bg-white px-8 py-2 font-bold text-center text-primary hover:bg-primary hover:text-white rounded-md">Voir plus</a>
					</div>
				</div>
			{% endfor %}
			<div class="w-full md:h-[480px] h-[240px] p-1 md:p-2 relative group">
				<img alt="{{ last_favorite.name }}" class="block h-full w-full rounded-sm object-cover object-center" src="{{ last_favorite.image|first ? asset('uploads/category/' ~ last_favorite.image|first.picture) : 'https://via.placeholder.com/500x500' }}"/>
				<div class="absolute inset-0 flex flex-col items-center justify-center opacity-0 hover:opacity-100 transition text-white p-8 rounded-sm bg-opacity-50 bg-red-600">
					<h3 class="text-2xl font-bold text-center text-white mb-4">{{ last_favorite.name }}</h3>
					<p class="text-lg text-center text-white mb-4">{{ last_favorite.summary }}</p>
					<a href="{{ path('category', { slug: last_favorite.slug }) }}" class="bg-white px-8 py-2 font-bold text-center text-primary hover:bg-primary hover:text-white rounded-md">Voir plus</a>
				</div>
			</div>
		</div>
	</div>
</div>